{
    "name": "redot/livewire-datatable",
    "description": "A Laravel package to easily handle server-side datatables in Livewire",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdelrhman Said",
            "email": "abdelrhmansaidzaki@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Redot\\LivewireDatatable\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require": {
        "php": "^8.1",
        "illuminate/console": "^8.0|^9.0|^10.0",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "livewire/livewire": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Redot\\LivewireDatatable\\LivewireDatatableServiceProvider"
            ]
        }
    }
}
